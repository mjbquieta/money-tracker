generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
  BLOCKED
  DELETED
}

enum DefaultCategory {
  BILLS
  FOOD
  TRANSPORT
  SAVINGS
  ENTERTAINMENT
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String?
  username      String         @unique
  status        UserStatus     @default(ACTIVE)
  password      String
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  deletedAt     DateTime?      @map("deleted_at")
  settings      Settings?
  budgetPeriods BudgetPeriod[]
  categories    Category[]

  @@map("users")
}

model Settings {
  id        String    @id @default(uuid())
  currency  String    @default("USD")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("settings")
}

model BudgetPeriod {
  id        String    @id @default(uuid())
  name      String? // Optional name like "January 2026" or "First Half Jan"
  startDate DateTime  @map("start_date")
  endDate   DateTime  @map("end_date")
  income    Float     @default(0) // Total income for this period (computed from incomes)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses      Expense[]
  expenseGroups ExpenseGroup[]
  incomes       Income[]

  @@map("budget_periods")
}

model Income {
  id          String    @id @default(uuid())
  name        String // e.g., "Main Job", "Side Business", "Freelance"
  description String?
  amount      Float     @default(0)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  budgetPeriodId String       @map("budget_period_id")
  budgetPeriod   BudgetPeriod @relation(fields: [budgetPeriodId], references: [id], onDelete: Cascade)

  @@map("incomes")
}

model ExpenseGroup {
  id          String    @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  budgetPeriodId String       @map("budget_period_id")
  budgetPeriod   BudgetPeriod @relation(fields: [budgetPeriodId], references: [id], onDelete: Cascade)
  expenses       Expense[]

  @@map("expense_groups")
}

model Category {
  id              String           @id @default(uuid())
  name            String
  description     String?
  isDefault       Boolean          @default(false) @map("is_default")
  defaultCategory DefaultCategory? @map("default_category") // Only set for system defaults
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime?        @updatedAt @map("updated_at")
  deletedAt       DateTime?        @map("deleted_at")

  // Relations
  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses Expense[]

  // Each user can have only one category with the same name
  @@unique([userId, name])
  @@map("categories")
}

model Expense {
  id          String    @id @default(uuid())
  name        String
  description String?
  amount      Float     @default(0)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  categoryId     String
  category       Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  budgetPeriodId String        @map("budget_period_id")
  budgetPeriod   BudgetPeriod  @relation(fields: [budgetPeriodId], references: [id], onDelete: Cascade)
  expenseGroupId String?       @map("expense_group_id")
  expenseGroup   ExpenseGroup? @relation(fields: [expenseGroupId], references: [id], onDelete: SetNull)

  @@map("expenses")
}
